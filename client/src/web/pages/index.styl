@require '../../styles/base';

.main {
  grid-gap(1rem);
  grid-template-columns(100%);
  margin-left: auto;
  margin-right: auto;

  @media screen and (min-width: 0) {
    width: 90%;
  }

  @media screen and (min-width: 1224px) {
    width: 70%;
  }
}

#header {
  grid-area(1, 1, 2, 2);
}

#settings {
  grid-area(2, 1, 3, 2);
  margin-top: 0.5rem;
}

#toolbar {
  grid-area(3, 1, 4, 2);
}

#results {
  grid-area(4, 1, 5, 2);
  margin-bottom: 0.5rem;
}

#run {
  width: 100%;
}
